{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es5", 
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["es2015", "dom"],
    "baseUrl": ".",
    "paths": {
      "*": [
        "./node_modules/*"
      ],
      "src/*": ["./src/*"],
      "@common/*": ["./src/common/*"],
      "@blockchain/*": ["./src/blockchain/*"]
    },
    "allowJs": true,
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
